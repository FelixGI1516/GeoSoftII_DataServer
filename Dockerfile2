FROM ubuntu:xenial

COPY req.txt .

RUN apt update -y
RUN apt-get install software-properties-common -y

RUN add-apt-repository ppa:deadsnakes/ppa
RUN apt update

RUN apt-get install -y apt-utils
RUN apt-get install python3.6 -y


RUN add-apt-repository ppa:ubuntugis/ppa
RUN apt-get update
RUN apt-get install python-numpy gdal-bin libgdal-dev -y

RUN apt install python3-pip -y
RUN python3.6 -m pip install --upgrade pip setuptools wheel
RUN pip3 install -r req.txt



#Port Oeffnen Empfehlung, beim starten noch mit -80:80 ausführen
EXPOSE 80

#Kopiere Code
COPY src/ .


#Ausführen beim Starten
CMD ["python3.6", "./Server.py"]


